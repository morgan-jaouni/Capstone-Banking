		<title>Current</title>
	</head>
	<body>
		<header>
			<h1>Current</h1>
			<nav>
				<ul>
					<li>
						<a href="/member/home">Home</a>
					</li>
					<li>
						<a href="/member/transfer">Transfer</a>
					</li>
					<li>
						<a href="/member/logout"type="button">Logout</a>
					</li>
					<li>
						<a href="/member/edit"type="button">Account</a>
					</li>
				</ul>
			</nav>
        </header>
		
		<h3> <%= userdata.username %> </h3>
		
		
		<div id="checkingBalance" class="balance">
		<h2>Available Balance: <%= userdata.money %> </h2>
		</div>
		<form action='/member/<%= userdata._id %>/withdraw?_method=PUT' method='POST'>
			<input class="text-input" id="checkingInput" name="withdraw" class="input" type="text" placeholder="enter an amount" />
			<input id="checkingWithdraw" class="text-input" type="submit" value="Withdraw" />
		</form>
		<form action='/member/<%= userdata._id %>/deposit?_method=PUT' method='POST'>
			<input class="text-input" id="checkingInput" name="deposit" class="input" type="text" placeholder="enter an amount" />
			<input class="text-input" id="checkingDeposit" class="deposit" type="submit" value="Deposit" />
		</form>
	  </div>
	</body>
</html>